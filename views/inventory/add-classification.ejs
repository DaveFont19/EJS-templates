<!-- The Content Heading -->
<% if (title) { %>
    <title>
        <%= title %>
    </title>
    <% } else { res.redirect('/') } %>

        <head>
            <%- include ('../partials/head') %>
        </head>

        <body>
            <%- include('../partials/header') %>
                <main>
                    <!-- A Message Block -->
                    <%# messages() %>
                        <h1><%- title %></h1>
                        <form action="/inv/add-classification" method="post" novalidate>
                            <div class="panel">
                                <p class="hint"><strong>FIELD IS REQUIRED.</strong></p>

                                <label for="classification_name">Classification Name</label>
                                <p class="subhint">NAME MUST BE ALPHABETIC CHARACTERS ONLY.</p>

                                <input type="text" id="classification_name" name="classification_name"
                                    value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>"
                                    autocomplete="off">

                                <% if (errors) { errors.forEach(e=> { %>
                                    <p class="field-error">
                                        <%= e.msg %>
                                    </p>
                                    <% }) } %>

                                        <button type="submit" class="btn">Add Classification</button>
                            </div>
                        </form>
                </main>
                <%- include('../partials/footer') %>
        </body>